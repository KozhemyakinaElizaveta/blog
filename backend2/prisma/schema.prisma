datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int     @id @default(autoincrement())
  username String  @unique
  password String
  posts    Post[]
}

model Post {
  id        Int     @id @default(autoincrement())
  message   String
  date      DateTime @default(now())
  authorId  Int
  author    User    @relation(fields: [authorId], references: [id])
}
